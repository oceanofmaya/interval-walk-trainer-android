<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ring outline to indicate today - drawn first as background -->
    <item
        android:gravity="center"
        android:width="34dp"
        android:height="34dp">
        <shape 
            android:shape="oval"
            android:useLevel="false">
            <stroke
                android:width="2.5dp"
                android:color="@color/fast_phase" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- Filled circle for workout day - slightly smaller to fit inside border -->
    <item
        android:gravity="center"
        android:width="31dp"
        android:height="31dp">
        <shape 
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/button_primary" />
        </shape>
    </item>
</layer-list>

